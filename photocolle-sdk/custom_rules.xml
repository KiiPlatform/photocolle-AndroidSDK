<?xml version="1.0" encoding="UTF-8"?>
<project>
  <property name="app.name" value="PhotoCollectionSDK" />
  <property name="dir.base.name" value="PhotoColleSDK-Android" />
  <property environment="ENV" />
  <property name="dir.javadoc" location="bin/javadoc" />
  <property name="android.home" location="${sdk.dir}"/>
  <property name="android.classpath"
            location="${android.home}/platforms/${target}/android.jar"/>
  <property name="android.docpath" location="${android.home}/docs/reference"/>
  <property name="dir.dest.resource" location="${dir.javadoc}/resources" />
  <property name="dir.base.resource" location="javadoc-resources" />
  <property
      name="zip.javadoc"
      location="bin/${dir.base.name}-${photocolle.version}_API_doc.zip" />

  <target name="prepare">
    <delete dir="${dir.javadoc}" />
    <mkdir dir="${dir.javadoc}" />
  </target>

  <target name="javadoc-clean">
    <delete dir="${dir.javadoc}" />
    <delete file="${zip.javadoc}" />
  </target>


  <target name="javadoc" depends="prepare">
    <javadoc
        encoding="utf-8"
        charset="utf-8"
        destdir="${dir.javadoc}"
        classpath="${android.classpath}"
        doctitle="${app.name}-${photocolle.version} API Specification"
        windowtitle="${app.name}-${photocolle.version} API Specification"
        access="public"
        packagenames="com.kii.sdk.photocolle"
        locale="en_US">
      <link offline="true" href="http://d.android.com/reference"
            packagelistLoc="${android.docpath}" />
      <fileset dir="src" defaultexcludes="yes" casesensitive="yes">
        <exclude name="com/kii/sdk/photocolle/_InternalPhotoColleSDKSetter.java" />
        <exclude name="com/kii/sdk/photocolle/http/**" />
      </fileset>
    </javadoc>
    <zip destfile="${zip.javadoc}"
         basedir="${dir.javadoc}" />
  </target>
</project>
